{
  "name": "handterm-backend",
  "version": "1.0.0",
  "description": "Backend for HandTerm application",
  "license": "Apache-2.0",
  "type": "commonjs",
  "scripts": {
    "cpCdk": "cp lambda/cdkshared/endpoints.json ../handterm/src/shared/ && mkdir -p dist/lambda/cdkshared && cp lambda/cdkshared/endpoints.json dist/lambda/cdkshared/ && echo 'endpoints.json copied'",
    "clean": "bash clean.sh",
    "build": "NODE_ENV=production tsc && npm run copy-lambda && npm run bundle-lambda",
    "bundle-lambda": "node -r esbuild-register esbuild.config.js",
    "predeploy": "bash check_env.sh && rm -rf dist && mkdir -p dist/lib && npm run cpCdk && npm run build",
    "deploy": "npm run predeploy && direnv exec . npx cdk deploy --app \"npx ts-node --prefer-ts-exts bin/cdk.ts\" --profile mark --region us-east-1 --require-approval never --outputs-file .aws/outputs.json",
    "bundle-lambda-test": "esbuild lambda/authentication/oauth_callback.ts lambda/authentication/listRecentRepos.ts --bundle --platform=node --target=node20 --format=cjs --outdir=dist/lambda/authentication --alias:@aws-sdk/client-cognito-identity-provider=/home/mstouffer/repos/handterm-proj/handterm-cdk/test/lambda-sim/mock-aws-sdk.js --alias:@octokit/rest=/home/mstouffer/repos/handterm-proj/handterm-cdk/test/lambda-sim/mock-rest.js --alias:@octokit/app=/home/mstouffer/repos/handterm-proj/handterm-cdk/test/lambda-sim/mock-app.js --resolve-extensions=.ts,.js --outbase=lambda/authentication --external:os --external:fs --external:path --external:crypto --external:stream --external:util --external:url --external:http --external:https --define:process.env.NODE_ENV='\"test\"' --define:global=globalThis --loader:.ts=ts",
    "test:bundle": "cp test/lambda-sim/mock-github-utils.js dist/lambda/authentication/githubUtils.js && npm run bundle-lambda-test && node test/lambda-sim/test-imports.mjs",
    "test:lambda": "jest \"lambda/authentication/__tests__/.*\\.test\\.ts\"",
    "copy-lambda": "mkdir -p dist/lambda && cp -R lambda/* dist/lambda/",
    "postdeploy": "node update-env.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "npm run test:unit",
    "test:unit": "jest \"lambda/authentication/__tests__/.*\\.test\\.ts\"",
    "test:integration": "jest \"tests/(github_auth|e2e)\\.test\\.ts\"",
    "test:e2e": "jest tests/e2e.test.ts",
    "test:github_auth": "jest tests/github_auth.test.ts && bash ./get-logs.sh callback",
    "test:github_auth:local": "NODE_ENV=development node --loader ts-node/esm test/lambda-sim/local-server.ts & sleep 2 && jest tests/github_auth.test.ts",
    "destroy": "dotenv -- cdk destroy",
    "watch": "tsc -w",
    "synth": "direnv exec . npx cdk synth --app \"npx ts-node --prefer-ts-exts bin/cdk.ts\" --profile mark --region us-east-1",
    "check-env": "direnv status",
    "layer": "cd lambdaLayer/nodejs && npm install --production && cd -"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.680.0",
    "@aws-sdk/client-ssm": "^3.679.0",
    "@aws-sdk/client-sso-oidc": "^3.679.0",
    "@aws-sdk/client-sts": "^3.679.0",
    "@octokit/auth-app": "^7.1.1",
    "@octokit/core": "^6.1.2",
    "@octokit/plugin-rest-endpoint-methods": "^13.2.6",
    "@octokit/rest": "^21.0.2",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "octokit": "^4.0.2",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.682.0",
    "@aws-sdk/client-s3": "^3.682.0",
    "@aws-sdk/client-ssm": "^3.679.0",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@octokit/auth-oauth-app": "^8.1.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.4",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "2.164.1",
    "aws-cdk-lib": "^2.164.1",
    "aws-jwt-verify": "^4.0.1",
    "aws-sdk-client-mock": "^4.1.0",
    "axios": "^1.7.7",
    "babel-loader": "^9.2.1",
    "constructs": "^10.4.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.5.0",
    "eslint": "^9.13.0",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "openapi-typescript-codegen": "^0.29.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "uuid": "^11.0.1",
    "webpack": "^5.96.1"
  }
}
