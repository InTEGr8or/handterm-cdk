{
  "name": "handterm-backend",
  "version": "1.0.0",
  "description": "Backend for HandTerm application",
  "license": "Apache-2.0",
  "type": "commonjs",
  "scripts": {
    "cpCdk": "cp ../handterm/src/shared/endpoints.json lambda/cdkshared/ && mkdir -p dist/lambda/cdkshared && cp lambda/cdkshared/endpoints.json dist/lambda/cdkshared/ && echo 'endpoints.json copied'",
    "clean": "bash clean.sh",
    "build": "NODE_ENV=production tsc && npm run copy-lambda && npm run bundle-lambda",
    "bundle-lambda": "esbuild dist/lambda/**/*.js --bundle --platform=node --target=node18 --format=esm --outdir=dist/lambda --allow-overwrite '--external:@aws-sdk/*' '--external:aws-sdk' '--external:@octokit/*' --minify",
    "predeploy": "rm -rf dist/lib && mkdir -p dist/lib && npm run cpCdk && npm run build && npx tsc lib/cdk-stack.ts lib/utils/lambdaUtils.ts --outDir dist/lib",
    "deploy": "npx cdk deploy --require-approval never --outputs-file .aws/outputs.json",
    "cdk-list": "npx cdk list",
    "cdk-diff": "npx cdk diff",
    "bundle-lambda-test": "esbuild lambda/authentication/oauth_callback.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/lambda/authentication/oauth_callback.bundle.js --external:@aws-sdk/client-cognito-identity-provider --external:aws-sdk --external:os --external:fs --external:path --external:crypto --external:stream --external:util --external:url --external:http --external:https --define:process.env.NODE_ENV='\"test\"' --define:global=globalThis --loader:.ts=ts",
    "test:bundle": "npm run bundle-lambda-test && node --experimental-vm-modules test/lambda-sim/test-imports.mjs",
    "copy-lambda": "mkdir -p dist/lambda && cp -R lambda/* dist/lambda/",
    "postdeploy": "node update-env.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:e2e": "jest tests/e2e.test.ts",
    "test:e2e:specific": "jest tests/e2e.test.ts -t",
    "test:github_auth": "jest tests/github_auth.test.ts && bash ./get-logs.sh callback",
    "test:github_auth:local": "NODE_ENV=development node --loader ts-node/esm test/lambda-sim/local-server.ts & sleep 2 && jest tests/github_auth.test.ts",
    "destroy": "dotenv -- cdk destroy",
    "watch": "tsc -w",
    "synth": "npx cdk synth",
    "check-env": "direnv status",
    "layer": "cd lambdaLayer/nodejs && npm install --production && cd -"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.680.0",
    "@aws-sdk/client-ssm": "^3.679.0",
    "@aws-sdk/client-sso-oidc": "^3.679.0",
    "@aws-sdk/client-sts": "^3.679.0",
    "@octokit/auth-app": "^7.1.1",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": "18.x"
  },
  "devDependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.682.0",
    "@aws-sdk/client-s3": "^3.682.0",
    "@aws-sdk/client-ssm": "^3.679.0",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@octokit/auth-oauth-app": "^8.1.1",
    "@octokit/rest": "^21.0.2",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.4",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "2.164.1",
    "aws-cdk-lib": "^2.164.1",
    "aws-jwt-verify": "^4.0.1",
    "aws-sdk-client-mock": "^4.1.0",
    "axios": "^1.7.7",
    "babel-loader": "^9.2.1",
    "constructs": "^10.4.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "openapi-typescript-codegen": "^0.29.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "uuid": "^11.0.1",
    "webpack": "^5.96.1"
  },
  "packageManager": "npm@10.8.2",
  "main": "jest.config.js",
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "keywords": [],
  "author": ""
}
